.commit {
  padding-top: 20rpx;
}

.commit .form-view textarea {
  background: #fff;
  width: 100%;
  height: 420rpx;
  font-size: 30rpx;
  color: #3e3d53;
  padding-top: 30rpx;
  padding-left: 30rpx;
  margin-top: 20rpx;
}

.commit .form-view .commit-type {
  display: flex;
  font-size: 30rpx;
  color: #666666;
  background: #fff;
  align-items: center;
  justify-content: space-between;
  padding: 30rpx 30rpx;
  box-sizing: border-box;
  border-bottom: 1rpx solid #eee;
}

.commit .form-view .commit-type .info {
  display: flex;
  font-size: 32rpx;
  color: #999999;
  align-items: center;
}

.commit .form-view .commit-type .info .icon-more {
  width: 40rpx;
  height: 40rpx;
  margin-right: 10rpx;
}

.commit .form-view .commit-type .result {
  display: flex;
  font-size: 32rpx;
  color: #3e3d53;
  align-items: center;
}

.commit .form-view .commit-type .result .icon-right {
  width: 40rpx;
  height: 40rpx;
  margin-left: 10rpx;
}

.commit .form-view .btn {
  width: 690rpx;
  height: 88rpx;
  line-height: 88rpx;
  margin: auto;
  margin-top: 100rpx;
  background-color: #07b280;
  color: #fff;
  font-size: 34rpx;
  text-align: center;
  border-radius: 10rpx;
}

page {
  background: #f7f7f7;
}
